{
  "name": "HL:A When?",
  "version": "1.0",
  "description": "When is Half-Life: Alyx coming out?",
  "manifest_version": 2,
  "permissions": [
    "alarms"
  ],
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "HL:A When?",
    "default_icon": "icons/icon_128.png"
  },
  "background": {
    "scripts": [
      "countdown.js"
    ],
    "persistent": false
  }
}